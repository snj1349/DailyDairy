@model IEnumerable<DailyDairyDAL.Models.Product>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-between align-items-center">
	<h3>Products</h3>
	@if (User.IsInRole("Admin") || User.IsInRole("Owner"))
	{
		<a class="btn btn-primary" href="/Products/Create">Create</a>
	}
</div>
<table class="table table-striped mt-3">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Price</th>
			<th>Stock</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var p in Model)
		{
			<tr>
				<td>@p.ProductId</td>
				<td>@p.Name</td>
				<td>â‚¹@p.Price</td>
				<td>@p.StockQuantity</td>
				<td>
					<a class="btn btn-sm btn-secondary" href="/Products/Details/@p.ProductId">Details</a>
					@if (User.IsInRole("Admin") || User.IsInRole("Owner"))
					{
						<a class="btn btn-sm btn-warning" href="/Products/Edit/@p.ProductId">Edit</a>
						<a class="btn btn-sm btn-danger" href="/Products/Delete/@p.ProductId">Delete</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>


